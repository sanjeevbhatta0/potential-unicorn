# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Crawler Configuration
# Cron expression for crawl schedule (default: every 30 minutes)
CRAWL_INTERVAL=*/30 * * * *
MAX_CONCURRENT_CRAWLS=3
REQUEST_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=5000

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60000

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/crawler.log

# Queue Configuration
QUEUE_NAME=news-articles
QUEUE_MAX_RETRIES=3

# Browser Configuration (Playwright)
HEADLESS=true
BROWSER_TIMEOUT=60000

# API Configuration (optional - if articles should be sent to an API)
API_ENDPOINT=
API_KEY=
